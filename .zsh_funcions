# Indica a ip do contenedor indicado

ipdocker(){

    docker inspect $1 | grep 'IPAddress' 
    # docker inspect --format '{{ .NetworkSettings.IPAddress }}' $1
    
}

edocker(){
    if [[ docker exec -it $1 bash ]];then
        echo " "
    else
        docker exec -it $1 sh
    fi
}



